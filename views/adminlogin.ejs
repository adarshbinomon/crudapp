
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<section class="h-100 bg-secondary.bg-gradient">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <!-- <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://i.pinimg.com/564x/af/8e/6a/af8e6af4d6d37ce9e87fbaae41b5dbc1.jpg"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
              </div> -->
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
  
                  <form action="/adminlogin" method="post" id="login">
  
                    <div class="d-flex align-items-center mb-3 pb-1">
                      <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                      <span class="h1 fw-bold mb-0">Admin Login</span>
                    </div>
  
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
  
                    <div class="form-outline mb-4">
                      <input name = 'email' type="text" id="email" class="form-control form-control-lg" placeholder="email" value="admin@mail.com" />
                      <div class="error text-danger ms-2"></div>                    
                    </div>
  
                    <div class="form-outline mb-4">
                      <input name = 'password' type="password" id="password" placeholder="password" value="admin" class="form-control form-control-lg" />
                      <div class="error text-danger ms-2"></div>
                    </div>
  
                    <div class="pt-1 mb-4">
                      <input  class="btn btn-dark btn-lg btn-block" type="submit"></input>
                      
                    </div>
  
                    
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<!-- include footer -->
