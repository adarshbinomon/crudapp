<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
  
                  <form class="mx-1 mx-md-4" action="/signup", method="post", id="signup">
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="name" class="form-control" placeholder="Name" name="name"/>
                        <div class="error text-danger ms-2"></div>
                        </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="email" class="form-control" placeholder="Email" name="email" />
                        <div class="error text-danger ms-2"></div>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4"> 
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="password" class="form-control" placeholder="Password" name="password" />
                        <div class="error text-danger ms-2"></div>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4"> 
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="phone number" id="phone" class="form-control" placeholder="Phone-number" name="phone" />
                        <div class="error text-danger ms-2"></div>
                      </div>
                    </div>
  
                    <div class="d-flex mb-3" >
                      <div><span>Gender:</span></div>
                      <div class="form-check ms-2">
                        <input class="form-check-input" type="radio" value="male" name="gender" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                          male
                        </label>
                      </div>
                      <div class="form-check ms-2">
                        <input class="form-check-input" type="radio" value="female" name="gender" id="flexRadioDefault2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">
                          female
                        </label>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Register</button>
                      <a href="/login" class="btn btn-primary btn-lg ms-5">Log In</a>
                    </div>
  
                  </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<!-- include footer -->
<script src="/js/validation.js"></script>
<%- include('include/_footer') %>
<!-- /include footer -->